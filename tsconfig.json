{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "target": "es6",
        "outDir": "dist",
        "lib": ["es7", "dom"],
        "esModuleInterop": true,
        "sourceMap": true,
        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "resolveJsonModule": true
    },
    "include": ["src/*.ts"],
    "exclude": ["node_modules"]
}
