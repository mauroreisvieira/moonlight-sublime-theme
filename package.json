{
    "name": "moonlight-sublime-theme",
    "version": "1.0.0",
    "description": "A Sublime Text theme with bubblegum colors on a moonlit background.",
    "author": "Mauro Reis Vieira <mauroreisvieira@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/mauroreisvieira/moonlight-sublime-theme"
    },
    "keywords": [
        "Sublime Text",
        "Theme",
        "Dark Theme",
        "Moonlight",
        "Night Theme"
    ],
    "scripts": {
        "build": "ts-node src/schemes.ts",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "release": "bash scripts/release.sh",
        "changelog": "conventional-changelog -p angular -r 2 -i CHANGELOG.md -s",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "dependencies": {
        "@types/node": "^17.0.42"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.2",
        "@commitlint/config-conventional": "^17.0.2",
        "@meetio/scheme-generator": "^3.2.0",
        "@typescript-eslint/eslint-plugin": "5.26.0",
        "@typescript-eslint/parser": "5.26.0",
        "conventional-changelog-cli": "^2.2.2",
        "eslint": "8.16.0",
        "husky": "^8.0.1",
        "picocolors": "^1.0.0",
        "prettier": "^2.6.2",
        "ts-node": "^10.8.1",
        "typescript": "^4.7.3"
    }
}
